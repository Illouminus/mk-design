{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "lib": ["es6", "dom", "es2017"],
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    ".eslintrc.js",
    "./config/",
    "webpack.config.ts",
//    "./config/jest/jestSetup.ts"
  ],

  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
//      "strictNullChecks": true,
    }
  },

}
